{
  "name": "would-you",
  "version": "3.0.0",
  "description": "Would you rather die or use this bot. You got the choice",
  "keywords": [
    "Discordjs",
    "discord-bot",
    "discord-js",
    "discord",
    "javascript"
  ],
  "homepage": "https://github.com/Developer-Dungeon-Studio/Would-You#readme",
  "bugs": {
    "url": "https://github.com/Developer-Dungeon-Studio/Would-You/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Developer-Dungeon-Studio/Would-You.git"
  },
  "license": "MIT",
  "author": "Dominik, ForGetFulSkyBro, Mezo",
  "type": "commonjs",
  "main": "dist/src/cluster.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && tsc --build --verbose",
    "clean": "rimraf dist",
    "copyfiles": "npm run copyfiles:config && npm run copyfiles:constants && npm run copyfiles:env && npm run copyfiles:register",
    "copyfiles:config": "copyfiles -u 1 ./config/**/*.yaml ./dist/config",
    "copyfiles:constants": "copyfiles -u 1 ./src/constants/**/*.* ./dist/src",
    "copyfiles:env": "cp .env ./dist/.env",
    "copyfiles:register": "cp register.js ./dist/register.js",
    "dev": "nodemon --watch src/** --ext ts,json --ignore src/**/*.spec.js --exec npm run start",
    "docs": "rimraf docs && typedoc",
    "format": "prettier --write \"**/*.js\"",
    "format:check": "prettier --check \"**/*.js\"",
    "lint": "eslint src/**/*.ts --ext .ts",
    "lint:fix": "eslint --fix src/**/*.ts --ext .ts",
    "migrate": "ts-node ./migrations/index.ts",
    "start": "npm run build && tsc-alias && npm run copyfiles && cd dist && node src/cluster.js",
    "precommit": "npm run lint:fix && npm run format",
    "prepare": "husky install"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxSingleQuote": false,
    "printWidth": 120,
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "dependencies": {
    "@discordjs/rest": "^1.2.0",
    "@napi-rs/canvas": "^0.1.41",
    "@slekup/utils": "^0.0.11",
    "@top-gg/sdk": "^3.1.5",
    "axios": "^1.4.0",
    "builder-validation": "^0.0.1",
    "colors": "^1.4.0",
    "cron": "^2.3.1",
    "discord-hybrid-sharding": "^2.1.3",
    "discord.js": "^14.11.0",
    "dotenv": "^16.1.4",
    "express": "^4.18.1",
    "fast-glob": "^3.2.12",
    "logform": "^2.5.1",
    "moment-timezone": "^0.5.43",
    "mongoose": "^7.2.2",
    "profanity-check": "^0.0.3",
    "quickchart-js": "^3.1.2",
    "topgg-autoposter": "^2.0.1",
    "tsconfig-paths": "^4.2.0",
    "url": "^0.11.0",
    "uuid": "^9.0.0",
    "winston": "^3.9.0",
    "yaml": "^2.3.1"
  },
  "devDependencies": {
    "@types/cron": "^2.0.1",
    "@types/express": "^4.17.17",
    "@types/node": "^20.2.5",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "copyfiles": "^2.4.1",
    "eslint": "^8.42.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-jsdoc": "^46.2.6",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "^8.0.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.6",
    "typedoc": "^0.24.8",
    "typedoc-plugin-djs-links": "^2.0.0",
    "typedoc-plugin-extras": "^2.3.3",
    "typedoc-plugin-mdn-links": "^3.0.3",
    "typescript": "^5.1.3"
  }
}
